<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity_title"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="10dp"
        android:text="뒤로가기"
        android:textSize="10dp" />
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="10dp"
        android:text="등록 해제"
        android:textSize="10dp" />
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="10dp"
        android:text="책 등록하기"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/notfound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색한 책을\n찾을 수 없습니다"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_image"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_name"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_author"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/book_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_price"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/book_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_isbn"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/book_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_page"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/book_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_subject"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/book_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_students"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
</RelativeLayout>