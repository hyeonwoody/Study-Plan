<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/top_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="logout"/>

        <ImageView
            android:id="@+id/setting_icon_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:src="@drawable/setting_icon"
            android:layout_alignTop="@id/top_button"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 시작 시간: "
            android:textSize="30dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/text_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textSize="40dp"
            android:layout_toRightOf="@+id/spinner1"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_below="@id/text_input1"
            android:layout_toRightOf="@+id/text_input1"/>

        <TextView
            android:id="@+id/text_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분"
            android:textSize="40dp"
            android:layout_below="@id/text_input1"
            android:layout_toRightOf="@+id/spinner2"/>

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_below="@id/text_input2"
            android:layout_toRightOf="@+id/text_input2"/>

        <TextView
            android:id="@+id/text_input3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/spinner3"
            android:layout_below="@id/text_input2"
            android:text="초"
            android:textSize="40dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/study_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="공부하는 책: "
            android:textSize="30dp"/>

        <Spinner
            android:id="@+id/spinner_book_select"
            android:layout_width="200dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@+id/study_book"/>

        <Spinner
            android:id="@+id/spinner_book_mission_select"
            android:layout_width="500dp"
            android:layout_height="70dp"
            android:layout_below="@+id/study_book"
            android:layout_alignLeft="@+id/study_book"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_timer_start"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:text="시작"
        android:textSize="18dp"/>
</LinearLayout>